{
  "name": "Basic Chrome Ext example",
  "description": "Google search engine Page customization",
  "version": "1.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "scripts/background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*.nimdone.com/*"],
      "js": ["scripts/content-script.js"],
      "run_at": "document_end"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["images/*"],
      "matches": ["*://*.nimdone.com/*"]
    }
  ],
  "permissions": ["storage", "tabs", "webRequest", "*://*.nimdone.com/*"]
}
